<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_user_name" />

    <EditText
        android:id="@+id/ed_num_entry_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ed_text" />

    <EditText
        android:id="@+id/ed_num_entry_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ed_text" />

    <Button
        android:id="@+id/btn_handleSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_calculate" />

    <TextView
        android:id="@+id/tv_sum_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_sum_text" />

    <Button
        android:id="@+id/btn_handleNavigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_navigate" />

    <SeekBar
        android:id="@+id/sb_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_seekbar_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/t_seekbar_text" />

</LinearLayout>